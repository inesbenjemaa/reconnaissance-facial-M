{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-success">Gestion des autorisations</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <form method="post" class="shadow p-4 rounded bg-light">
            <table class="table table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Statut</th>
                        <th scope="col">√âtat</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><strong>{{ user.firstName }} {{ user.lastName }}</strong></td>
                            <td>{{ user.email }}</td>
                            <td>
                                <select name="access_status[{{ user.id }}]" class="form-select">
                                    <option value="authorized" {% if user.authorizationStatus == 'authorized' %}selected{% endif %}>‚úÖ Autoris√©</option>
                                    <option value="unauthorized" {% if user.authorizationStatus == 'unauthorized' %}selected{% endif %}>‚ö†Ô∏è Non autoris√©</option>
                                    <option value="impostor" {% if user.authorizationStatus == 'impostor' %}selected{% endif %}>‚ùå Imposteur</option>
                                </select>
                            </td>
                            <td>
                                {% if user.authorizationStatus == 'authorized' %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Autoris√©</span>
                                {% elseif user.authorizationStatus == 'unauthorized' %}
                                    <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-circle-fill"></i> Non autoris√©</span>
                                {% elseif user.authorizationStatus == 'impostor' %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Imposteur</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inconnu</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-success">üíæ Mettre √† jour</button>
            </div>
        </form>
    </div>
{% endblock %}
