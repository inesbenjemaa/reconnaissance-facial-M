{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-weight: bold; color: rgb(66, 100, 52);">Manage Users</h1>

    {% include 'layouts/_flash_message.html.twig' %}

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge bg-primary">Administrator</span>
                            {% elseif 'ROLE_EDITOR' in user.roles %}
                                <span class="badge bg-success">Editor</span>
                            {% else %}
                                <span class="badge bg-secondary">Client</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if 'ROLE_ADMIN' not in user.roles %}
                                {% if 'ROLE_EDITOR' not in user.roles %}
                                    <a 
                                        class="btn btn-outline-success btn-sm mb-1" 
                                        href="{{ path('app_user_to_editor', {'id': user.id}) }}" 
                                        onclick="return confirm('Do you really want to make this user an editor?')">
                                        <i class="bi bi-person-check-fill"></i> Add as Editor
                                    </a>
                                {% else %}
                                    <a 
                                        class="btn btn-outline-warning btn-sm mb-1" 
                                        href="{{ path('app_user_remove_editor_role', {'id': user.id}) }}" 
                                        onclick="return confirm('Do you really want to remove the editor role from this user?')">
                                        <i class="bi bi-person-dash-fill"></i> Remove Editor Role
                                    </a>
                                {% endif %}
                            {% endif %}

                            <a 
                                class="btn btn-outline-primary btn-sm mb-1" 
                                href="{{ path('app_user_edit', {'id': user.id}) }}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a 
                                class="btn btn-outline-danger btn-sm mb-1" 
                                href="{{ path('app_user_remove', {'id': user.id}) }}" 
                                onclick="return confirm('Do you really want to delete this user?')">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No users found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <a href="{{ path('app_user_add') }}" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Add User
        </a>
    </div>
</div>
{% endblock %}
