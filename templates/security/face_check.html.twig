{% extends 'base.html.twig' %}

{% block title %}Vérification faciale{% endblock %}

{% block body %}
<div id="camera-section" style="text-align:center; margin-top: 50px;">
    <h3>Veuillez capturer votre visage</h3>
    <video id="video" width="320" height="240" autoplay></video>
    <br>
    <button type="button" id="capture">Capturer</button>
    <canvas id="canvas" width="320" height="240" style="display:none;"></canvas>
    <form id="face-form" method="post" action="{{ path('face_verify') }}">
        <input type="hidden" name="face_image" id="face_image">
        <button type="submit" id="submit-face" style="display:none;">Vérifier</button>
    </form>
</div>

<script>
    navigator.mediaDevices.getUserMedia({ video: true })
        .then(stream => {
            document.getElementById('video').srcObject = stream;
        });

    document.getElementById('capture').onclick = function () {
        const canvas = document.getElementById('canvas');
        const context = canvas.getContext('2d');
        const video = document.getElementById('video');
        context.drawImage(video, 0, 0, 320, 240);

        const imageData = canvas.toDataURL('image/png');
        document.getElementById('face_image').value = imageData;
        document.getElementById('submit-face').style.display = 'inline';
    };
</script>
{% endblock %}
